<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="banner-show" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'background.jpg' %>'); height: 100px; background-size: cover; background-position: center center; margin-top: 7px; ">
      </div>
      <div class="info text-center">
        <%= image_tag 'erlich.jpg', class: "avatar-square" %>
        <h3>Name: <%= @user.first_name %> <%= @user.last_name %></h3>
        <h3>Location: <%= @user.city %></h3>
      </div>
      <div class="service text-center">
        <h2>Services:</h2>
        <ul>
        <% @user.services.each do |service| %>
        <li><%= service.title %></li>
        <% end %>
        </ul>
      </div>
      <div class="experience text-center">
        <h2>Education></h2>
        <p><%= @user.education %></p>
        <h2>Experience></h2>
        <p><%= @user.experience %></p>
      </div>
    </div>
  </div>
  <% if current_user.id == @user.id %>
    <%= link_to "Edit my profile", edit_user_path(current_user), class: "btn btn-primary" %>
  <% end %>
</div>







